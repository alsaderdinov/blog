.card.text-center
  .card-body
    .h1.card-title
      = @post.title
    .p.card-text
      = @post.body

    - if policy(@post).update?
      = link_to 'Edit', edit_post_path(@post), class: 'btn btn-warning mb-3 mt-3'

    - if policy(@post).destroy?
      = link_to 'Delete', post_path(@post), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger mb-3 mt-3'

  .card-footer.text-muted
    = @post.user.email

.mb-3
  = render @post.comments

= render 'comments/form'
